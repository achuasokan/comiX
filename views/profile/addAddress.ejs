<%- include('../partials/header.ejs') %>
<div class="bg-black text-white flex">
  <%- include('./profileSidebar.ejs') %>
  <div class="flex flex-col items-center justify-center p-6 w-full max-w-md mx-auto">
    <h2 class="text-lg font-bold mb-4">Add Address</h2>
    <form class="w-full space-y-4" action="/profile/add-address" method="post">
      <div class="flex space-x-4">
        <input type="text" placeholder="Name" name="name" class="flex-1 p-2 rounded bg-[#1f1f1f] text-white" required />
        <input type="tel" placeholder="10-digit mobile number" class="flex-1 p-2 rounded bg-[#1f1f1f] text-white" required />
      </div>
      <input type="text" placeholder="Building Name" name="buildingName" class="w-full p-2 rounded bg-[#1f1f1f] text-white" required />
      <input type="text" placeholder="Street" name="street" class="w-full p-2 rounded bg-[#1f1f1f] text-white" required />
      <div class="flex space-x-4">
        <input type="text" placeholder="City" name="city" class="flex-1 p-2 rounded bg-[#1f1f1f] text-white" required />
        <select class="flex-1 p-2 rounded bg-[#1f1f1f] text-white" required>
          <option value="">--Select State--</option>
          <!-- Add state options here -->
        </select>
      </div>
      <input type="text" placeholder="Country"  name="country" class="w-full p-2 rounded bg-[#1f1f1f] text-white" required />
      <input type="text" placeholder="Pincode" name="pincode" class="w-full p-2 rounded bg-[#1f1f1f] text-white" required />
      <label class="flex items-center">
        <input type="checkbox" class="mr-2" />
        <span class="text-white">Set as Default</span>
      </label>
      <div class="flex justify-between">
        <button type="submit" class="bg-yellow-400 text-black py-2 px-4 rounded">Add Address</button>
        <button type="button" class="bg-red-500 text-white py-2 px-4 rounded">Cancel</button>
      </div>
    </form>
  </div>
</div>
<%- include('../partials/footer.ejs') %>