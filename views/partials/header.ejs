        <a href="/profile/personal-info" class="block px-4 py-2 hover:text-black hover:bg-gradient-to-r hover:bg-gradient-to-r hover:from-red-600 hover:to-yellow-400">Profile</a>
        <form action="#" method="POST" class="inline" id="logout-button">
          <button type="button" class="block w-full text-left px-4 py-2 hover:text-black hover:bg-gradient-to-r hover:from-red-600 hover:to-yellow-400 focus:outline-none">Logout</button>
        </form>
      </div>
    </div>
    <% } else { %>
      <a href="/login" class="hover:text-orange-500">Log in</a>
    <% } %>

    <!-- Heart Icon -->
     <% if (user) { %>
      <a href="/wishlist" class="hover:text-orange-500">
        <i class="fas fa-heart fa-beat h-6 w-6"></i>
      </a>
    <% } else { %>
      <a href="/login" class="hover:text-orange-500">
        <i class="fas fa-heart fa-beat h-6 w-6"></i>
      </a>
    <% } %>
   

    <!-- Cart Icon -->
     <% if (user) { %>
      <a href="/cart" class="hover:text-orange-500">
        <i class="fas fa-shopping-cart  h-6 w-6"></i>
      </a>
    <% } else { %>
      <a href="/login" class="hover:text-orange-500">
        <i class="fas fa-shopping-cart h-6 w-6"></i>
      </a>
    <% } %> 
  </div>

  <!-- Mobile Menu - Hamburger -->
  <div class="md:hidden">
    <button id="menu-toggle" aria-label="Toggle menu" class="focus:outline-none">
      <i class="fas fa-bars w-6 h-6 text-white"></i>
    </button>

    <!-- Mobile Dropdown -->
    <div id="mobile-menu" class="hidden absolute right-0 mt-2 w-48 bg-black text-white rounded-md shadow-lg z-50">
      <a href="/" class="block px-4 py-2 hover:text-orange-500">Home</a>
      <a href="/shop/allProducts" class="block px-4 py-2 hover:text-orange-500">Shop</a>
      <div class="flex px-4 flex-col">

        <!-- Heart Icon -->
        <% if (user) { %>
          <a href="/wishlist" class="hover:text-orange-500">
            <i class="fas fa-heart fa-beat h-6 w-6"></i>
          </a>
          <% } else { %>
          <a href="/login" class="hover:text-orange-500">
            <i class="fas fa-heart fa-beat h-6 w-6"></i>
          </a>
