<%- include ('../partials/header.ejs') %>

<div class="min-h-screen flex items-center justify-center bg-black">
  <div class="bg-black bg-opacity-10 p-8 mb-6 rounded-xl max-w-md w-full">
    <div class="w-full max-w-sm p-8 backdrop-filter backdrop-blur-sm bg-black bg-opacity-50 rounded-2xl shadow-2xl border border-white/10">
      <h2 class="text-4xl p-2 font-bold text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-red-600 mb-8 text-center ">Forgot Password</h2>
      
     <!-- flash message  -->
     <%- include('../partials/flashMessage.ejs') %>

     <form class="space-y-4" action="/password/forgot" method="POST" id="forgotPasswordForm">
     
      <div class="relative">
        <input id="email"name="email" type="email" placeholder=" "  class=" block w-full px-2 py-2 bg-transparent text-white border border-gray-300 rounded-lg focus:outline-none focus:border-orange-500 placeholder:text-transparent transition duration-300">
        <label for="email" class="absolute left-2 top-2 ml-2 text-white text-md transition-all duration-300 transform origin-left scale-75 pointer-events-none">Enter your Email</label>
      </div>  
      
      <div>
        <button type="submit"  class="styled-btn w-full py-2 px-2 tracking-wider transform hover:scale-105">
          Submit
        </button>
      </div>

     </form>
    </div>
  </div>
  
</div>
  

