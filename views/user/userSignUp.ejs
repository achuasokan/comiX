              <label for="confirmPassword" class="text-white text-lg transition-all duration-300 pointer-events-none transform origin-left"> Confirm Password</label>
              <input id="confirmPassword" name="confirmPassword" type="password" placeholder="Confirm your Password"  class="w-full px-2 py-2 bg-white text-black rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-400 placeholder:text-gray-500 backdrop-blur transition duration-300">
              <p id="confirmPasswordError" class="text-red-200 text-sm" aria-live="assertive"></p>
            </div>
          
            <div>
              <button type="submit" class="w-full py-2 px-2 bg-gradient-to-r from-yellow-400 to-red-600 text-white font-bold rounded-lg hover:from-yellow-500 hover:to-red-700 transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-400 transform hover:scale-105">
                SignUp
              </button>
            </div>
          </form>
