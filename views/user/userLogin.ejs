<style>
  .relative {
    position: relative;
  }

  input:focus + label,
  input:not(:placeholder-shown) + label {
    top: -13px; 
    left: -1px; 
    font-size: 16px; 
    color: #fbbf24; 
    background-color: black;
    padding: 0 4px; 
    z-index: 1; 
  }
</style>

<%- include("../partials/header.ejs") %>

<div class="min-h-screen flex items-center justify-center bg-black">
  <div class="bg-black bg-opacity-10 p-6 md:p-8 mb-6 rounded-xl max-w-md w-full">
    <div class="w-full max-w-sm p-6 md:p-8 backdrop-filter backdrop-blur-sm bg-black bg-opacity-50 rounded-2xl shadow-2xl border border-white/10">
      <h2 class="text-4xl p-2 font-bold text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-red-600 mb-8 text-center">Login</h2>
      <%- include('../partials/flashMessage.ejs') %>
      <form class="space-y-8" action="/login" method="POST" id="loginform">
        <div class="relative">
          <input id="email" name="email" type="email" class="block w-full px-2 py-2 text-white border border-gray-300 rounded-lg focus:outline-none focus:border-orange-500 placeholder-transparent bg-transparent" required placeholder=" ">
          <label for="email" class="absolute left-2 top-2 text-white ml-2 transition-all duration-300 transform origin-left scale-75 pointer-events-none">Enter Email</label>
          <p id="emailError" class="text-red-200 text-sm" aria-live="assertive"></p>
        </div>

        <div class="relative">
          <input id="password" name="password" type="password" class="block w-full px-2 py-2 text-white border border-gray-300 rounded-lg focus:outline-none focus:border-orange-500 placeholder-transparent bg-transparent" required placeholder=" ">
          <label for="password" class="absolute left-2 top-2 text-white ml-2 transition-all duration-300 transform origin-left scale-75 pointer-events-none">Enter Password</label>
          <p id="passwordError" class="text-red-200 text-sm" aria-live="assertive"></p>
        </div>

        <div>
          <button type="submit" class="w-full py-2 px-2 bg-gradient-to-r from-yellow-400 to-red-600 text-white font-bold rounded-lg hover:from-yellow-500 hover:to-red-700 transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-400 transform hover:scale-105">Sign In</button>
        </div>
      </form>

      <div class="mt-5">
        <div class="relative flex items-center">
          <div class="flex-grow border-t border-gray-300/30"></div>
          <span class="flex-shrink mx-4 text-gray-300">Or sign in with</span>
          <div class="flex-grow border-t border-gray-300/30"></div>
        </div>
        <div class="mt-3 flex justify-center">
          <a href="/auth/google" aria-label="Sign in with Google" class="p-2 rounded-full bg-white/10 hover:bg-white/20 transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-400 backdrop-blur-sm">
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M21.8055 10.0415H21V10H12V14H17.6515C16.827 16.3285 14.6115 18 12 18C8.6865 18 6 15.3135 6 12C6 8.6865 8.6865 6 12 6C13.5295 6 14.921 6.577 15.9805 7.5195L18.809 4.691C17.023 3.0265 14.634 2 12 2C6.4775 2 2 6.4775 2 12C2 17.5225 6.4775 22 12 22C17.5225 22 22 17.5225 22 12C22 11.3295 21.931 10.675 21.8055 10.0415Z" fill="#FFC107"/>
              <path d="M3.15295 7.3455L6.43845 9.755C7.32745 7.554 9.48045 6 12 6C13.5295 6 14.921 6.577 15.9805 7.5195L18.809 4.691C17.023 3.0265 14.634 2 12 2C8.15895 2 4.82795 4.1685 3.15295 7.3455Z" fill="#FF3D00"/>
              <path d="M12 22C14.583 22 16.93 21.0115 18.7045 19.404L15.6095 16.785C14.5718 17.5742 13.3038 18.001 12 18C9.39903 18 7.19053 16.3415 6.35853 14.027L3.09753 16.5395C4.75253 19.778 8.11353 22 12 22Z" fill="#4CAF50"/>
              <path d="M21.8055 10.0415H21V10H12V14H17.6515C17.2571 15.1082 16.5467 16.0766 15.608 16.7855L15.6095 16.7845L18.7045 19.4035C18.4855 19.6025 22 17 22 12C22 11.3295 21.931 10.675 21.8055 10.0415Z" fill="#1976D2"/>
            </svg>
          </a>
        </div>
      </div>

      <div class="mt-2 text-center">
        <p class="text-sm text-gray-300">
          New to ComiX?
          <a href="/signup" class="font-medium text-yellow-400 hover:text-yellow-300 transition duration-300 ease-in-out underline">Create an account</a>
        </p>
      </div>

      <div class="mt-1 text-center">
        <a href="/password/forgot" class="text-sm text-gray-400 hover:text-gray-300 transition duration-300 ease-in-out">Forgot password?</a>
      </div>
    </div>
  </div>
</div>

